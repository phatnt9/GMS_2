                                            Text="{Binding Search_deviceProfiles_group, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}">
                                            <ComboBoxItem>All</ComboBoxItem>
                                            <ComboBoxItem>Group 1</ComboBoxItem>
                                            <ComboBoxItem>Group 2</ComboBoxItem>
                                            <ComboBoxItem>Group 3</ComboBoxItem>
                                            <ComboBoxItem>Group 4</ComboBoxItem>
                                            <ComboBoxItem>Group 5</ComboBoxItem>
                                            <ComboBoxItem>Group 6</ComboBoxItem>
                                            <ComboBoxItem>Group 7</ComboBoxItem>
                                            <ComboBoxItem>Group 8</ComboBoxItem>
                                            <ComboBoxItem>Group 9</ComboBoxItem>
                                            <ComboBoxItem>Group 10</ComboBoxItem>
                                        </md:CommandComboBox>
                                        <md:CommandTextBox
                                            x:Name="tb_device_search"
                                            Width="120"
                                            Margin="3,2"
                                            Padding="5,0"
                                            Command="{Binding SearchOthersDeviceProfilesCommand}"
                                            CommandParameter="{Binding ElementName=dg_device_profiles, UpdateSourceTrigger=PropertyChanged, Path=Items}"
                                            Style="{StaticResource placeHolder}"
                                            Tag="Type to search"
                                            Text="{Binding Search_deviceProfiles_others, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" />
                                    </StackPanel>
                                    <StackPanel
                                        HorizontalAlignment="Right"
                                        Background="DarkGreen"
                                        Orientation="Horizontal">
                                        <Button
                                            x:Name="btn_deviceProfiles_manage"
                                            Margin="3,2"
                                            Padding="5,0"
                                            Command="{Binding DeviceProfilesManageCommand}"
                                            CommandParameter="{Binding ElementName=dg_devices, Path=SelectedItem}"
                                            Content="Manage" />
                                        <Button
                                            x:Name="btn_device_export"
                                            Margin="3,2"
                                            Padding="5,0"
                                            Content="Export" />
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <DataGrid
                                        x:Name="dg_device_profiles"
                                        AutoGenerateColumns="False"
                                        CanUserAddRows="False"
                                        CanUserDeleteRows="False"
                                        IsReadOnly="True"
                                        ItemsSource="{Binding DeviceProfiles, UpdateSourceTrigger=PropertyChanged}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=PROFILE_ID, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="Id"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=PIN_NO, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="PinNo"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=AD_NO, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="AdNo"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=PROFILE_NAME, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="Name"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=CLASS_NAME, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="Type"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=SUB_CLASS, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="Group"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=GENDER, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="Gender"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=PROFILE_STATUS, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="Status"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=SERVER_STATUS, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="Request"
                                                Visibility="Visible" />
                                            <DataGridCheckBoxColumn
                                                Width="Auto"
                                                Binding="{Binding Path=CHECK_DATE_TO_LOCK, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="Auto Suspension"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=DATE_CREATED, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="Date Created"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=DATE_MODIFIED, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="Date Modified"
                                                Visibility="Visible" />
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                                <Grid Grid.Row="2">
                                    <ProgressBar
                                        Name="pbStatus"
                                        Maximum="100"
                                        Minimum="0"
                                        Value="{Binding SelectedDevice.SyncProgressValue, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="10"
                                        FontWeight="Normal"
                                        Text="{Binding ElementName=pbStatus, Path=Value, StringFormat={}{0:0} %}" />
                                </Grid>
                                <Grid Grid.Row="3" Background="CadetBlue">
                                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                        <TextBlock
                                            Width="100"
                                            VerticalAlignment="Center"
                                            Background="Coral"
                                            Text="{Binding ElementName=dg_device_profiles, Path=SelectedItems.Count}"
                                            TextAlignment="Center" />
                                        <Button
                                            x:Name="btn_device_sync_each"
                                            Margin="3,2"
                                            Padding="5,0"
                                            Command="{Binding SyncCommand}"
                                            Content="Sync">
                                            <Button.CommandParameter>
                                                <MultiBinding Converter="{StaticResource myDeviceProfilesSelectedItemsConverter}" UpdateSourceTrigger="PropertyChanged">
                                                    <Binding ElementName="dg_device_profiles" Path="SelectedItems.Count" />
                                                    <Binding ElementName="dg_device_profiles" Path="SelectedItems" />
                                                </MultiBinding>
                                            </Button.CommandParameter>
                                        </Button>
                                        <Button
                                            x:Name="btn_device_stopSync"
                                            Margin="3,2"
                                            Padding="5,0"
                                            Command="{Binding StopSyncCommand}"
                                            CommandParameter="{Binding ElementName=dg_devices, Path=SelectedItem, UpdateSourceTrigger=PropertyChanged}"
                                            Content="Stop" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                            <Grid Grid.Column="1" Background="LightSkyBlue">
                                <DockPanel>
                                    <GroupBox Header="Schedule">
                                        <DockPanel>
                                            <StackPanel>
                                                <RadioButton
                                                    x:Name="rb_schedule"
                                                    Margin="0,5,0,0"
                                                    GroupName="TimeActive">
                                                    <Grid Height="40">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                        </Grid.RowDefinitions>
                                                        <Grid Grid.Row="0" Margin="0,0,0,2">
                                                            <DockPanel>
                                                                <Label Padding="3,0" VerticalContentAlignment="Center">From</Label>
                                                                <md:CommandTextBox
                                                                    x:Name="tb_active_from_time_1"
                                                                    Width="50"
                                                                    Padding="0"
                                                                    VerticalContentAlignment="Center"
                                                                    Text="19:00" />
                                                                <Label Padding="3,0" VerticalContentAlignment="Center">to</Label>
                                                                <md:CommandTextBox
                                                                    x:Name="tb_active_to_time_1"
                                                                    Width="50"
                                                                    Padding="0"
                                                                    VerticalContentAlignment="Center" />
                                                            </DockPanel>
                                                        </Grid>
                                                        <Grid Grid.Row="1">
                                                            <DockPanel>
                                                                <Label Padding="3,0" VerticalContentAlignment="Center">From</Label>
                                                                <md:CommandTextBox
                                                                    x:Name="tb_active_from_time_2"
                                                                    Width="50"
                                                                    Padding="0"
                                                                    VerticalContentAlignment="Center" />
                                                                <Label Padding="3,0" VerticalContentAlignment="Center">to</Label>
                                                                <md:CommandTextBox
                                                                    x:Name="tb_active_to_time_2"
                                                                    Width="50"
                                                                    Padding="0"
                                                                    VerticalContentAlignment="Center" />
                                                            </DockPanel>
                                                        </Grid>
                                                    </Grid>
                                                </RadioButton>
                                                <RadioButton
                                                    Margin="0,5,0,0"
                                                    Content="24/24"
                                                    GroupName="TimeActive" />
                                                <Button
                                                    x:Name="btn_apply_activeTime"
                                                    Width="60"
                                                    Height="20"
                                                    Command="{Binding SetTimeDeviceProfileCommnad}"
                                                    Content="Apply">
                                                    <Button.CommandParameter>
                                                        <MultiBinding Converter="{StaticResource myDeviceProfilesActiveTimeConverter}" UpdateSourceTrigger="PropertyChanged">
                                                            <Binding ElementName="tb_active_from_time_1" Path="Text" />
                                                            <Binding ElementName="tb_active_to_time_1" Path="Text" />
                                                            <Binding ElementName="tb_active_from_time_2" Path="Text" />
                                                            <Binding ElementName="tb_active_to_time_2" Path="Text" />
                                                        </MultiBinding>
                                                    </Button.CommandParameter>
                                                </Button>
                                            </StackPanel>
                                        </DockPanel>
                                    </GroupBox>
                                </DockPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem
                    Width="100"
                    FontSize="12"
                    Header="Profiles">
                    <TabItem.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </TabItem.HeaderTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="*" MinWidth="300" />
