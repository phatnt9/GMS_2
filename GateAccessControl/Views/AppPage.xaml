                            <Grid Grid.Row="0" Background="White">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="10" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <GroupBox BorderBrush="Black" Header="Profile">
                                        <ScrollViewer>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="170" />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <Border
                                                    Grid.Row="0"
                                                    BorderBrush="LightGray"
                                                    BorderThickness="1">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="170" />
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <Border
                                                            Grid.Column="0"
                                                            Margin="2,2,2,1"
                                                            BorderBrush="LightGray"
                                                            BorderThickness="1">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition />
                                                                    <RowDefinition Height="25" />
                                                                </Grid.RowDefinitions>
                                                                <Grid Grid.Row="0" Grid.RowSpan="2">
                                                                    <!--<Image Source="{Binding SelectedProfile.IMAGE, UpdateSourceTrigger=PropertyChanged, Mode=OneWay, Converter={StaticResource myProfileImageConverter}}" />-->
                                                                    <Image Source="{Binding ProfileImage, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />
                                                                </Grid>
                                                                <Grid Grid.Row="1">
                                                                    <StackPanel
                                                                        HorizontalAlignment="Right"
                                                                        Background="#f1f1f1"
                                                                        Orientation="Horizontal">
                                                                        <Button
                                                                            x:Name="btn_profile_replace_picture"
                                                                            Margin="3"
                                                                            Padding="5,0"
                                                                            VerticalContentAlignment="Center"
                                                                            BorderThickness="0"
                                                                            Command="{Binding ReplaceProfileImageCommand}"
                                                                            Content="Change Image">
                                                                            <Button.Style>
                                                                                <Style TargetType="{x:Type Button}">
                                                                                    <Style.Triggers>
                                                                                        <Trigger Property="IsEnabled" Value="True">
                                                                                            <Setter Property="Foreground" Value="White" />
                                                                                            <Setter Property="FontWeight" Value="DemiBold" />
                                                                                            <Setter Property="Background" Value="#222E50" />
                                                                                        </Trigger>
                                                                                        <Trigger Property="IsEnabled" Value="False">
                                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                                        </Trigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </Button.Style>
                                                                        </Button>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Grid>
                                                        </Border>
                                                        <Grid Grid.Column="1" Margin="0,2,2,1">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition />
                                                                <RowDefinition />
                                                                <RowDefinition />
                                                                <RowDefinition />
                                                                <RowDefinition />
                                                            </Grid.RowDefinitions>
                                                            <Border
                                                                Grid.Row="0"
                                                                Margin="0,0,0,2"
                                                                BorderBrush="LightGray"
                                                                BorderThickness="1">
                                                                <TextBox
                                                                    HorizontalContentAlignment="Center"
                                                                    VerticalContentAlignment="Center"
                                                                    BorderThickness="0"
                                                                    FontSize="16"
                                                                    Text="{Binding ElementName=dg_main_profiles, Path=SelectedItem.PROFILE_STATUS}"
                                                                    TextWrapping="WrapWithOverflow" />
                                                            </Border>
                                                            <Border
                                                                Grid.Row="1"
                                                                Margin="0,0,0,2"
                                                                BorderBrush="LightGray"
                                                                BorderThickness="1">
                                                                <TextBox
                                                                    HorizontalContentAlignment="Center"
                                                                    VerticalContentAlignment="Center"
                                                                    BorderThickness="0"
                                                                    FontSize="16"
                                                                    Text="{Binding ElementName=dg_main_profiles, Path=SelectedItem.PROFILE_NAME}"
                                                                    TextWrapping="WrapWithOverflow" />
                                                            </Border>
                                                            <Grid Grid.Row="2">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition />
                                                                    <ColumnDefinition />
                                                                </Grid.ColumnDefinitions>
                                                                <Border
                                                                    Grid.Column="0"
                                                                    Margin="0,0,1,0"
                                                                    BorderBrush="LightGray"
                                                                    BorderThickness="1">
                                                                    <TextBox
                                                                        HorizontalContentAlignment="Center"
                                                                        VerticalContentAlignment="Center"
                                                                        BorderThickness="0"
                                                                        FontSize="16"
                                                                        Text="{Binding ElementName=dg_main_profiles, Path=SelectedItem.PIN_NO}"
                                                                        TextWrapping="WrapWithOverflow" />
                                                                </Border>
                                                                <Border
                                                                    Grid.Column="1"
                                                                    Margin="1,0,0,0"
                                                                    BorderBrush="LightGray"
                                                                    BorderThickness="1">
                                                                    <TextBox
                                                                        HorizontalContentAlignment="Center"
                                                                        VerticalContentAlignment="Center"
                                                                        BorderThickness="0"
                                                                        FontSize="16"
                                                                        Text="{Binding ElementName=dg_main_profiles, Path=SelectedItem.AD_NO}"
                                                                        TextWrapping="WrapWithOverflow" />
                                                                </Border>
                                                            </Grid>

                                                            <Border
                                                                Grid.Row="3"
                                                                Margin="0,2,0,0"
                                                                BorderBrush="LightGray"
                                                                BorderThickness="1">
                                                                <TextBox
                                                                    HorizontalContentAlignment="Center"
                                                                    VerticalContentAlignment="Center"
                                                                    BorderThickness="0"
                                                                    FontSize="16"
                                                                    Text="{Binding ElementName=dg_main_profiles, Path=SelectedItem.DOB, StringFormat=\{0:dd-MM-yyyy\}}"
                                                                    TextWrapping="WrapWithOverflow" />
                                                            </Border>
                                                            <Border
                                                                Grid.Row="4"
                                                                Margin="0,2,0,0"
                                                                BorderBrush="LightGray"
                                                                BorderThickness="1">
                                                                <TextBox
                                                                    HorizontalContentAlignment="Center"
                                                                    VerticalContentAlignment="Center"
                                                                    BorderThickness="0"
                                                                    FontSize="16"
                                                                    Text="{Binding ElementName=dg_main_profiles, Path=SelectedItem.DISU, StringFormat=\{0:dd-MM-yyyy\}}"
                                                                    TextWrapping="WrapWithOverflow" />
                                                            </Border>
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                                <Grid Grid.Row="1">
                                                    <ListBox ItemsSource="{Binding ElementName=dg_main_profiles, Path=SelectedItem.LIST_DEVICE_ID, Converter={StaticResource myProfileListDeviceConverter}, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />
                                                </Grid>
                                            </Grid>
                                        </ScrollViewer>
                                    </GroupBox>
                                </Grid>
                                <Grid Grid.Row="1" Background="#f1f1f1" />
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25" />
                                    <RowDefinition />
                                    <RowDefinition Height="25" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Background="#f1f1f1">
                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                        <Button
                                            x:Name="btn_previousDate"
                                            Width="70"
                                            Margin="3"
                                            Padding="5,0"
                                            BorderThickness="0"
                                            Command="{Binding SelectPreviousDateCommand}"
                                            Content="Previous">
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="True">
                                                            <Setter Property="Foreground" Value="White" />
                                                            <Setter Property="FontWeight" Value="DemiBold" />
                                                            <Setter Property="Background" Value="#222E50" />
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <md:CommandDatePicker
                                            x:Name="dtp_timecheck_date"
                                            Margin="5,0"
                                            Padding="5,2"
                                            Command="{Binding SelectedDateChangeCommand}"
                                            SelectedDate="{Binding SelectedTimeCheckDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                        <Button
                                            x:Name="btn_nextDate"
                                            Width="70"
                                            Margin="3"
                                            Padding="5,0"
                                            BorderThickness="0"
                                            Command="{Binding SelectNextDateCommand}"
                                            Content="Next">
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="True">
                                                            <Setter Property="Foreground" Value="White" />
                                                            <Setter Property="FontWeight" Value="DemiBold" />
                                                            <Setter Property="Background" Value="#222E50" />
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                        <!--<Button
                                            x:Name="btn_timecheck_export"
                                            Margin="3"
                                            Padding="5,0"
                                            Content="Export"/>-->
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="1" Background="#f1f1f1">
                                    <DataGrid
                                        x:Name="dg_timeChecks"
                                        Margin="0,5,0,0"
                                        AutoGenerateColumns="False"
                                        CanUserAddRows="False"
                                        CanUserDeleteRows="False"
                                        ItemsSource="{Binding TimeChecks, UpdateSourceTrigger=PropertyChanged}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=PIN_NO, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="PinNo"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=DEVICE_IP, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="IP"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=TIMECHECK_TIME, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="Time"
                                                Visibility="Visible" />
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                                <Grid Grid.Row="2" Background="#f1f1f1" />
                            </Grid>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>

        </Grid>

    </Grid>
</Page>
