<Page
    x:Class="GateAccessControl.Views.AppPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GateAccessControl.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:GateAccessControl"
    xmlns:vmd="clr-namespace:GateAccessControl.ViewModels"
    Title="AppPage"
    d:DesignHeight="470"
    d:DesignWidth="900"
    mc:Ignorable="d">
    <Page.Resources>
        <vmd:DeviceItemWebSocketStatusConverter x:Key="myDeviceItemWebSocketStatusConverter" />
        <vmd:LoadTimeCheckParametersConverter x:Key="myLoadTimeCheckParametersConverter" />
        <vmd:ProfileSelectedItemsConverter x:Key="myProfileSelectedItemsConverter" />
        <vmd:DeviceProfilesActiveTimeConverter x:Key="myDeviceProfilesActiveTimeConverter" />
        <vmd:DeviceProfilesSelectedItemsConverter x:Key="myDeviceProfilesSelectedItemsConverter" />
        <vmd:ProfileListDeviceConverter x:Key="myProfileListDeviceConverter" />
        <vmd:ProfileImageConverter x:Key="myProfileImageConverter" />
        <md:ActiveTimeFrom1Converter x:Key="myActiveTimeFrom1Converter" />
        <md:ActiveTimeTo1Converter x:Key="myActiveTimeTo1Converter" />
        <md:ActiveTimeFrom2Converter x:Key="myActiveTimeFrom2Converter" />
        <md:ActiveTimeTo2Converter x:Key="myActiveTimeTo2Converter" />

        <DataTemplate DataType="{x:Type md:Device}">
            <Border
                Width="250"
                Margin="2"
                Padding="5"
                BorderBrush="Green"
                BorderThickness="1"
                CornerRadius="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Padding="2"
                        Background="LightBlue"
                        Text="{Binding Path=DEVICE_NAME}" />
                    <TextBlock Grid.Column="1" Text="  Ip: " />
                    <TextBlock
                        Grid.Column="2"
                        FontStyle="Italic"
                        Text="{Binding Path=DEVICE_IP}" />
                </Grid>
            </Border>

            <!--<DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Path=DEVICE_STATUS}" Value="10">
                    <Setter Property="ListBoxItem.Foreground" Value="Red" />
                </DataTrigger>
            </DataTemplate.Triggers>-->
        </DataTemplate>

        <Style
            x:Key="placeHolder"
            BasedOn="{StaticResource {x:Type TextBox}}"
            TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <TextBox
                                x:Name="textSource"
                                VerticalContentAlignment="Center"
                                Panel.ZIndex="2"
                                Background="Transparent"
                                BorderThickness="0"
                                Text="{Binding Path=Text, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBox
                                VerticalContentAlignment="Center"
                                Panel.ZIndex="1"
                                Background="{TemplateBinding Background}"
                                Text="{TemplateBinding Tag}">
                                <TextBox.Style>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="Foreground" Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=Text, Source={x:Reference textSource}}" Value="">
                                                <Setter Property="Foreground" Value="LightGray" />
                                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#f1f1f1">
            <StackPanel Orientation="Horizontal">
                <Image
                    Height="50"
                    Margin="15,0,0,0"
                    Source="pack://siteoforigin:,,,/Resources/favicon.ico" />
                <DockPanel Margin="15,0,0,0" HorizontalAlignment="Left">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="30"
                        FontWeight="DemiBold"
                        Text="Access Control System" />
                </DockPanel>
            </StackPanel>

            <WrapPanel HorizontalAlignment="Right">
                <Button
                    x:Name="btn_classManagement"
                    Margin="3"
                    Padding="2"
                    Background="#222E50"
                    BorderThickness="0"
                    Command="{Binding ManageClassCommand}"
                    Content="Class Management"
                    FontSize="13"
                    FontWeight="Medium"
                    Foreground="White" />
                <Button
                    x:Name="btn_openDatabase"
                    Margin="3"
                    Padding="2"
                    Background="#222E50"
                    BorderThickness="0"
                    Click="Btn_openDatabase_Click"
                    Content="Open Database"
                    FontSize="13"
                    FontWeight="Medium"
                    Foreground="White" />
            </WrapPanel>
        </Grid>
        <Grid Grid.Row="1">
            <TabControl>
                <TabItem
                    Width="100"
                    FontSize="12"
                    Header="Devices">
                    <TabItem.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </TabItem.HeaderTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition MaxHeight="250" />
                            <RowDefinition Height="5" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Background="#f1f1f1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25" />
                                    <RowDefinition />
                                    <RowDefinition Height="25" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Background="#f1f1f1">
                                    <StackPanel
                                        Margin="5,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            DataContext="{Binding ElementName=dg_devices, Path=SelectedItem, UpdateSourceTrigger=PropertyChanged}"
                                            FontWeight="Medium"
                                            Foreground="Green"
                                            Text="{Binding DeviceItem.StatusProfile}" />
                                    </StackPanel>
                                    <StackPanel
                                        HorizontalAlignment="Right"
                                        Background="#f1f1f1"
                                        Orientation="Horizontal">
                                        <Button
                                            x:Name="btn_device_add"
                                            Margin="3"
                                            Padding="5,0"
                                            BorderThickness="0"
                                            Command="{Binding AddDeviceCommand}"
                                            Content="Add">
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="True">
                                                            <Setter Property="Foreground" Value="White" />
                                                            <Setter Property="FontWeight" Value="DemiBold" />
                                                            <Setter Property="Background" Value="#222E50" />
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </Trigger>
                                                        <!--<DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Button}}, Path=IsEnabled}" Value="true">
                                                            <Setter Property="Foreground" Value="White" />
                                                            <Setter Property="FontWeight" Value="DemiBold" />
                                                            <Setter Property="Background" Value="#69B578" />
                                                        </DataTrigger>-->
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <Button
                                            x:Name="btn_device_edit"
                                            Margin="3"
                                            Padding="5,0"
                                            VerticalContentAlignment="Center"
                                            BorderThickness="0"
                                            Command="{Binding EditDeviceCommand}"
                                            Content="Edit">
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="True">
                                                            <Setter Property="Foreground" Value="White" />
                                                            <Setter Property="FontWeight" Value="DemiBold" />
                                                            <Setter Property="Background" Value="#222E50" />
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <Button
                                            x:Name="btn_device_remove"
                                            Margin="3"
                                            Padding="5,0"
                                            BorderThickness="0"
                                            Command="{Binding RemoveDeviceCommand}"
                                            Content="Remove">
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="True">
                                                            <Setter Property="Foreground" Value="White" />
                                                            <Setter Property="FontWeight" Value="DemiBold" />
                                                            <Setter Property="Background" Value="#D83636" />
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <Button
                                            x:Name="btn_device_refresh"
                                            Margin="3"
                                            Padding="5,0"
                                            BorderThickness="0"
                                            Command="{Binding RefreshDeviceCommand}"
                                            Content="Refresh">
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="True">
                                                            <Setter Property="Foreground" Value="White" />
                                                            <Setter Property="FontWeight" Value="DemiBold" />
                                                            <Setter Property="Background" Value="#222E50" />
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <md:CommandDataGrid
                                        x:Name="dg_devices"
                                        AutoGenerateColumns="False"
                                        CanUserAddRows="False"
                                        CanUserDeleteRows="False"
                                        Command="{Binding SelectDeviceCommand}"
                                        IsReadOnly="True"
                                        ItemsSource="{Binding Devices, UpdateSourceTrigger=PropertyChanged}"
                                        SelectedIndex="0"
                                        SelectedItem="{Binding SelectedDevice, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                        SelectionMode="Single"
                                        SelectionUnit="FullRow">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=DEVICE_ID, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="ID"
                                                IsReadOnly="True"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="*"
                                                Binding="{Binding Path=DEVICE_NAME, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="NAME"
                                                IsReadOnly="True"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="*"
                                                Binding="{Binding Path=DEVICE_IP, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="IP"
                                                IsReadOnly="True"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="*"
                                                Binding="{Binding Path=SyncProgressValue, StringFormat=\{0\}%, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="Syncing"
                                                IsReadOnly="True"
                                                Visibility="Visible">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn
                                                Width="*"
                                                Binding="{Binding Path=DeviceItem.WebSocketStatus, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="Status"
                                                IsReadOnly="True"
                                                Visibility="Visible">
                                                <DataGridTextColumn.CellStyle>
                                                    <Style TargetType="{x:Type DataGridCell}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Path=DeviceItem.WebSocketStatus, UpdateSourceTrigger=PropertyChanged}" Value="Pending">
                                                                <Setter Property="Foreground" Value="Black" />
                                                                <Setter Property="FontWeight" Value="DemiBold" />
                                                                <Setter Property="Background" Value="#E6E8E6" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Path=DeviceItem.WebSocketStatus, UpdateSourceTrigger=PropertyChanged}" Value="Connecting">
                                                                <Setter Property="Foreground" Value="White" />
                                                                <Setter Property="FontWeight" Value="DemiBold" />
                                                                <Setter Property="Background" Value="#2D7DD2" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Path=DeviceItem.WebSocketStatus, UpdateSourceTrigger=PropertyChanged}" Value="Connected">
                                                                <Setter Property="Foreground" Value="White" />
                                                                <Setter Property="FontWeight" Value="DemiBold" />
                                                                <Setter Property="Background" Value="#39B54A" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Path=DeviceItem.WebSocketStatus, UpdateSourceTrigger=PropertyChanged}" Value="Disconnected">
                                                                <Setter Property="Foreground" Value="White" />
                                                                <Setter Property="FontWeight" Value="DemiBold" />
                                                                <Setter Property="Background" Value="#BE2328" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGridTextColumn.CellStyle>
                                            </DataGridTextColumn>
                                        </DataGrid.Columns>
                                    </md:CommandDataGrid>
                                </Grid>
                                <Grid Grid.Row="2" Background="#f1f1f1">
                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                        <Button
                                            x:Name="btn_device_requestTimeCheck"
                                            Margin="3"
                                            Padding="5,0"
                                            BorderThickness="0"
                                            Command="{Binding RequesTimeRecordCommand}"
                                            Content="Request check-in records">
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="True">
                                                            <Setter Property="Foreground" Value="White" />
                                                            <Setter Property="FontWeight" Value="DemiBold" />
                                                            <Setter Property="Background" Value="#222E50" />
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                    <StackPanel
                                        HorizontalAlignment="Right"
                                        Background="#f1f1f1"
                                        Orientation="Horizontal">
                                        <Button
                                            x:Name="btn_device_connect"
                                            Margin="3"
                                            Padding="5,0"
                                            BorderThickness="0"
                                            Command="{Binding ConnectDeviceCommand}"
                                            Content="Connect">
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="True">
                                                            <Setter Property="Foreground" Value="White" />
                                                            <Setter Property="FontWeight" Value="DemiBold" />
                                                            <Setter Property="Background" Value="#29BF12" />
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <Button
                                            x:Name="btn_device_disconnect"
                                            Margin="3"
                                            Padding="5,0"
                                            BorderThickness="0"
                                            Command="{Binding DisconnectDeviceCommand}"
                                            Content="Disconnect">
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="True">
                                                            <Setter Property="Foreground" Value="White" />
                                                            <Setter Property="FontWeight" Value="DemiBold" />
                                                            <Setter Property="Background" Value="#D83636" />
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                            <Grid Grid.Column="1" Background="White">
                                <GroupBox
                                    Margin="5,0,5,5"
                                    BorderBrush="Black"
                                    Header="Device Name">
                                    <ScrollViewer>
                                        <Grid>
                                            <Border
                                                Grid.Row="0"
                                                BorderBrush="LightGray"
                                                BorderThickness="1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="170" />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <Border
                                                        Grid.Column="0"
                                                        Margin="2,2,2,1"
                                                        BorderBrush="LightGray"
                                                        BorderThickness="1" />
                                                    <Grid Grid.Column="1" Margin="0,2,2,1">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                        </Grid.RowDefinitions>
                                                        <Border
                                                            Grid.Row="0"
                                                            Margin="0,0,0,2"
                                                            BorderBrush="LightGray"
                                                            BorderThickness="1">
                                                            <TextBox
                                                                BorderThickness="0"
                                                                IsReadOnly="True"
                                                                Text="{Binding ElementName=dg_devices, Path=SelectedItem.DEVICE_NAME, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />
                                                        </Border>
                                                        <Grid Grid.Row="1">
                                                            <Border
                                                                Grid.Column="0"
                                                                Margin="0,0,1,0"
                                                                BorderBrush="LightGray"
                                                                BorderThickness="1">
                                                                <TextBox
                                                                    BorderThickness="0"
                                                                    IsReadOnly="True"
                                                                    Text="{Binding ElementName=dg_devices, Path=SelectedItem.DEVICE_IP, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />
                                                            </Border>
                                                        </Grid>
                                                        <Grid Grid.Row="2">
                                                            <Border
                                                                Grid.Column="0"
                                                                Margin="0,0,1,0"
                                                                BorderBrush="LightGray"
                                                                BorderThickness="1">
                                                                <TextBox
                                                                    BorderThickness="0"
                                                                    IsReadOnly="True"
                                                                    Text="{Binding ElementName=dg_devices, Path=SelectedItem.DEVICE_NOTE, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />
                                                            </Border>
                                                        </Grid>
                                                    </Grid>
                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </ScrollViewer>
                                </GroupBox>
                            </Grid>
                        </Grid>
                        <GridSplitter
                            Grid.Row="1"
                            HorizontalAlignment="Stretch"
                            Background="#f1f1f1" />
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="200" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25" />
                                    <RowDefinition />
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="25" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Background="#f1f1f1">
                                    <StackPanel
                                        HorizontalAlignment="Left"
                                        Background="#f1f1f1"
                                        Orientation="Horizontal">
                                        <md:CommandComboBox
                                            x:Name="cb_device_class"
                                            Width="65"
                                            Margin="3"
                                            Padding="5,0"
                                            VerticalContentAlignment="Center"
                                            Command="{Binding SearchClassDeviceProfilesCommand}"
                                            DisplayMemberPath="CLASS_NAME"
                                            ItemsSource="{Binding Classes, UpdateSourceTrigger=PropertyChanged}"
                                            SelectedIndex="0"
                                            Text="{Binding Search_deviceProfiles_class, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" />
                                        <md:CommandComboBox
                                            x:Name="cb_device_group"
                                            Width="65"
                                            Margin="3"
                                            Padding="5,0"
                                            VerticalContentAlignment="Center"
                                            Command="{Binding SearchGroupDeviceProfilesCommand}"
                                            SelectedIndex="0"
                                            Text="{Binding Search_deviceProfiles_group, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}">
                                            <ComboBoxItem>All</ComboBoxItem>
                                            <ComboBoxItem>Group 1</ComboBoxItem>
                                            <ComboBoxItem>Group 2</ComboBoxItem>
                                            <ComboBoxItem>Group 3</ComboBoxItem>
                                            <ComboBoxItem>Group 4</ComboBoxItem>
                                            <ComboBoxItem>Group 5</ComboBoxItem>
                                            <ComboBoxItem>Group 6</ComboBoxItem>
                                            <ComboBoxItem>Group 7</ComboBoxItem>
                                            <ComboBoxItem>Group 8</ComboBoxItem>
                                            <ComboBoxItem>Group 9</ComboBoxItem>
                                            <ComboBoxItem>Group 10</ComboBoxItem>
                                        </md:CommandComboBox>
                                        <md:CommandTextBox
                                            x:Name="tb_device_search"
                                            Width="120"
                                            Margin="3"
                                            Padding="5,0"
                                            Command="{Binding SearchOthersDeviceProfilesCommand}"
                                            CommandParameter="{Binding ElementName=dg_device_profiles, Path=Items, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                            Style="{StaticResource placeHolder}"
                                            Tag="Type to search"
                                            Text="{Binding Search_deviceProfiles_others, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" />
                                    </StackPanel>
                                    <StackPanel
                                        HorizontalAlignment="Right"
                                        Background="#f1f1f1"
                                        Orientation="Horizontal">
                                        <Button
                                            x:Name="btn_deviceProfiles_manage"
                                            Margin="3,3"
                                            Padding="5,0"
                                            BorderThickness="0"
                                            Command="{Binding DeviceProfilesManageCommand}"
                                            Content="Manage">
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="True">
                                                            <Setter Property="Foreground" Value="White" />
                                                            <Setter Property="FontWeight" Value="DemiBold" />
                                                            <Setter Property="Background" Value="#222E50" />
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <Button
                                            x:Name="btn_deviceprofiles_refresh"
                                            Margin="3,3"
                                            Padding="5,0"
                                            BorderThickness="0"
                                            Command="{Binding RefreshDeviceProfilesCommand}"
                                            Content="Refresh">
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="True">
                                                            <Setter Property="Foreground" Value="White" />
                                                            <Setter Property="FontWeight" Value="DemiBold" />
                                                            <Setter Property="Background" Value="#222E50" />
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <md:CommandDataGrid
                                        x:Name="dg_device_profiles"
                                        AutoGenerateColumns="False"
                                        CanUserAddRows="False"
                                        CanUserDeleteRows="False"
                                        Command="{Binding SelectDeviceProfilesCommand}"
                                        IsReadOnly="True"
                                        ItemsSource="{Binding DeviceProfiles, UpdateSourceTrigger=PropertyChanged}"
                                        SelectedItem="{Binding SelectedDeviceProfile, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=PROFILE_ID, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="Id"
                                                Visibility="Hidden" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=PIN_NO, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="PinNo"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=AD_NO, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="AdNo"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=PROFILE_NAME, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="Name"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=CLASS_NAME, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="Type"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=SUB_CLASS, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="Group"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=GENDER, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="Gender"
                                                Visibility="Visible" />
                                            <DataGridTextColumn
                                                Width="Auto"
                                                Binding="{Binding Path=PROFILE_STATUS, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                Header="Status"
                                                Visibility="Visible">
                                                <DataGridTextColumn.CellStyle>
                                                    <Style TargetType="{x:Type DataGridCell}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Path=PROFILE_STATUS, UpdateSourceTrigger=PropertyChanged}" Value="Active">
                                                                <Setter Property="Foreground" Value="White" />
                                                                <Setter Property="FontWeight" Value="DemiBold" />
                                                                <Setter Property="Background" Value="#29BF12" />
