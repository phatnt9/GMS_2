                                            x:Name="cb_device_group"
                                            Width="65"
                                            Margin="3,2"
                                            Padding="5,0"
                                            VerticalContentAlignment="Center"
                                            Command="{Binding SearchGroupDeviceProfilesCommand}"
                                            CommandParameter="{Binding ElementName=dg_device_profiles, UpdateSourceTrigger=PropertyChanged, Path=Items}"
