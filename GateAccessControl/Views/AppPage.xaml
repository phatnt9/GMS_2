                                        CanUserAddRows="False"
                                        CanUserDeleteRows="False"
                                        Command="{Binding SelectDeviceCommand}"
                                        CommandParameter="{Binding ElementName=dg_devices, Path=SelectedItem}"
                                        IsReadOnly="True"
                                        ItemsSource="{Binding Devices, UpdateSourceTrigger=PropertyChanged}"
                                        SelectedItem="{Binding SelectedDevice, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}"
