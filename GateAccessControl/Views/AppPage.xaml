                                        </DataGrid.Columns>
                                    </md:CommandDataGrid>
                                </Grid>
                                <Grid Grid.Row="2" Background="MediumAquamarine">
                                    <StackPanel
                                        HorizontalAlignment="Right"
                                        Background="Coral"
                                        Orientation="Horizontal">
                                        <Button
