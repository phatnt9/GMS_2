                                    Background="Aqua"
                                    Orientation="Horizontal">
                                    <Button
                                        x:Name="btn_profile_add"
                                        Margin="3,2"
                                        Padding="5,0"
                                        Command="{Binding AddProfileCommand}"
                                        CommandParameter="{Binding ElementName=dg_main_profiles, Path=SelectedItem, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                        Content="Add" />
                                    <Button
                                        x:Name="btn_profile_edit"
                                        Margin="3,2"
                                        Padding="5,0"
                                        VerticalContentAlignment="Center"
                                        Command="{Binding EditProfileCommand}"
                                        CommandParameter="{Binding ElementName=dg_main_profiles, Path=SelectedItem, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                        Content="Edit" />
                                    <Button
                                        x:Name="btn_profile_remove"
                                        Margin="3,2"
                                        Padding="5,0"
                                        Command="{Binding RemoveProfileCommand}"
                                        CommandParameter="{Binding ElementName=dg_main_profiles, Path=SelectedItem, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                        Content="Remove" />
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="1">
                                <DockPanel HorizontalAlignment="Stretch" Background="DarkSlateBlue">
                                    <md:CommandComboBox
                                        x:Name="cb_profile_class"
                                        Width="65"
                                        Margin="3,2"
                                        Padding="5,0"
                                        VerticalContentAlignment="Center"
                                        Command="{Binding SearchClassProfilesCommand}"
                                        CommandParameter="{Binding ElementName=dg_main_profiles, UpdateSourceTrigger=PropertyChanged, Path=Items}"
                                        DisplayMemberPath="CLASS_NAME"
                                        ItemsSource="{Binding Classes, UpdateSourceTrigger=PropertyChanged}"
                                        SelectedIndex="0"
                                        Text="{Binding Search_profiles_class, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" />
                                    <md:CommandComboBox
                                        x:Name="cb_profile_group"
                                        Width="65"
                                        Margin="3,2"
                                        Padding="5,0"
                                        VerticalContentAlignment="Center"
                                        Command="{Binding SearchGroupProfilesCommand}"
                                        CommandParameter="{Binding ElementName=dg_main_profiles, UpdateSourceTrigger=PropertyChanged, Path=Items}"
                                        SelectedIndex="0"
                                        Text="{Binding Search_profiles_group, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}">
                                        <ComboBoxItem>All</ComboBoxItem>
                                        <ComboBoxItem>Group 1</ComboBoxItem>
                                        <ComboBoxItem>Group 2</ComboBoxItem>
                                        <ComboBoxItem>Group 3</ComboBoxItem>
                                        <ComboBoxItem>Group 4</ComboBoxItem>
                                        <ComboBoxItem>Group 5</ComboBoxItem>
                                        <ComboBoxItem>Group 6</ComboBoxItem>
                                        <ComboBoxItem>Group 7</ComboBoxItem>
                                        <ComboBoxItem>Group 8</ComboBoxItem>
                                        <ComboBoxItem>Group 9</ComboBoxItem>
                                        <ComboBoxItem>Group 10</ComboBoxItem>
                                    </md:CommandComboBox>
                                    <md:CommandTextBox
                                        x:Name="tb_profile_search"
                                        Margin="3,2"
                                        Padding="5,0"
                                        Command="{Binding SearchOthersProfilesCommand}"
                                        CommandParameter="{Binding ElementName=dg_main_profiles, UpdateSourceTrigger=PropertyChanged, Path=Items}"
                                        Style="{StaticResource placeHolder}"
                                        Tag="Type to search"
                                        Text="{Binding Search_profiles_others, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" />
                                </DockPanel>
                            </Grid>
                            <Grid Grid.Row="2">
                                <DataGrid
                                    x:Name="dg_main_profiles"
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    IsReadOnly="True"
                                    ItemsSource="{Binding Profiles, UpdateSourceTrigger=PropertyChanged}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding Path=PROFILE_ID, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                            Header="Id"
                                            Visibility="Visible" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding Path=PIN_NO, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                            Header="PinNo"
                                            Visibility="Visible" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding Path=AD_NO, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                            Header="AdNo"
                                            Visibility="Visible" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding Path=PROFILE_NAME, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                            Header="Name"
                                            Visibility="Visible" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding Path=CLASS_NAME, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                            Header="Type"
                                            Visibility="Visible" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding Path=SUB_CLASS, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                            Header="Group"
                                            Visibility="Visible" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding Path=GENDER, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                            Header="Gender"
                                            Visibility="Visible" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding Path=PROFILE_STATUS, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                            Header="Status"
                                            Visibility="Visible" />
                                        <DataGridCheckBoxColumn
                                            Width="Auto"
                                            Binding="{Binding Path=CHECK_DATE_TO_LOCK, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                            Header="Auto Suspension"
                                            Visibility="Visible" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding Path=LIST_DEVICE_ID, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                            Header="List Device"
                                            Visibility="Visible" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding Path=DATE_CREATED, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                            Header="Date Created"
                                            Visibility="Visible" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding Path=DATE_MODIFIED, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                            Header="Date Modified"
                                            Visibility="Visible" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                            <Grid Grid.Row="3" Background="Cornsilk">
                                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                    <Button
                                        x:Name="btn_profile_import"
                                        Margin="3,2"
                                        Padding="5,0"
                                        Command="{Binding ImportProfilesCommand}"
                                        Content="Import" />
                                    <Button
                                        x:Name="btn_profile_export"
                                        Margin="3,2"
                                        Padding="5,0"
                                        Content="Export" />
                                </StackPanel>
                            </Grid>
                        </Grid>
                        <GridSplitter
                            Name="gs_main"
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            Background="#F1F1F1" />
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Background="White">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="25" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <TabControl TabStripPlacement="Top">
                                        <TabItem Header="Infomation">
                                            <GroupBox BorderBrush="Black" Header="Profile">
                                                <ScrollViewer>
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="110" />
                                                            <RowDefinition />
                                                        </Grid.RowDefinitions>
                                                        <Border
                                                            Grid.Row="0"
                                                            BorderBrush="LightGray"
                                                            BorderThickness="1">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="100" />
                                                                    <ColumnDefinition />
                                                                </Grid.ColumnDefinitions>
                                                                <Border
                                                                    Grid.Column="0"
                                                                    Margin="2,2,2,1"
                                                                    BorderBrush="LightGray"
                                                                    BorderThickness="1">
                                                                    <Grid>
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition />
                                                                            <RowDefinition Height="25" />
                                                                        </Grid.RowDefinitions>
                                                                        <Grid Grid.Row="0">
                                                                            <Image Source="{Binding ElementName=dg_main_profiles, Path=SelectedItem.IMAGE, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource myProfileImageConverter}}" />
                                                                        </Grid>
                                                                        <Grid Grid.Row="1">
                                                                            <StackPanel
                                                                                HorizontalAlignment="Right"
                                                                                Background="Aqua"
                                                                                Orientation="Horizontal">
                                                                                <Button
                                                                                    x:Name="btn_profile_replace_picture"
                                                                                    Margin="3,2"
                                                                                    Padding="5,0"
                                                                                    VerticalContentAlignment="Center"
                                                                                    Command="{Binding ReplaceProfileImageCommand}"
                                                                                    CommandParameter="{Binding ElementName=dg_main_profiles, Path=SelectedItem, UpdateSourceTrigger=PropertyChanged}"
                                                                                    Content="Change Image" />
                                                                            </StackPanel>
                                                                        </Grid>
                                                                    </Grid>
                                                                </Border>
                                                                <Grid Grid.Column="1" Margin="0,2,2,1">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition />
                                                                        <RowDefinition />
                                                                    </Grid.RowDefinitions>
                                                                    <Border
                                                                        Grid.Row="0"
                                                                        Margin="0,0,0,2"
                                                                        BorderBrush="LightGray"
                                                                        BorderThickness="1">
                                                                        <TextBox
                                                                            HorizontalContentAlignment="Center"
                                                                            VerticalContentAlignment="Center"
                                                                            BorderThickness="0"
                                                                            FontSize="16"
                                                                            Text="{Binding ElementName=dg_main_profiles, Path=SelectedItem.PROFILE_NAME}"
                                                                            TextWrapping="WrapWithOverflow" />
                                                                    </Border>
                                                                    <Grid Grid.Row="1">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition />
                                                                            <ColumnDefinition />
                                                                        </Grid.ColumnDefinitions>
                                                                        <Border
                                                                            Grid.Column="0"
                                                                            Margin="0,0,1,0"
                                                                            BorderBrush="LightGray"
                                                                            BorderThickness="1">
                                                                            <TextBox
                                                                                HorizontalContentAlignment="Center"
                                                                                VerticalContentAlignment="Center"
                                                                                BorderThickness="0"
                                                                                FontSize="16"
                                                                                Text="{Binding ElementName=dg_main_profiles, Path=SelectedItem.PIN_NO}"
                                                                                TextWrapping="WrapWithOverflow" />
                                                                        </Border>
                                                                        <Border
                                                                            Grid.Column="1"
                                                                            Margin="1,0,0,0"
                                                                            BorderBrush="LightGray"
                                                                            BorderThickness="1">
                                                                            <TextBox
                                                                                HorizontalContentAlignment="Center"
                                                                                VerticalContentAlignment="Center"
                                                                                BorderThickness="0"
                                                                                FontSize="16"
                                                                                Text="{Binding ElementName=dg_main_profiles, Path=SelectedItem.AD_NO}"
                                                                                TextWrapping="WrapWithOverflow" />
                                                                        </Border>
                                                                    </Grid>
                                                                </Grid>
                                                            </Grid>
                                                        </Border>
                                                        <Grid Grid.Row="1">
                                                            <RichTextBox />
                                                        </Grid>
                                                    </Grid>
                                                </ScrollViewer>
                                            </GroupBox>
                                        </TabItem>
                                        <TabItem Header="Devices">
                                            <ListView />
                                        </TabItem>
                                    </TabControl>
                                </Grid>
                                <Grid Grid.Row="1" Background="MediumAquamarine" />
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25" />
                                    <RowDefinition />
                                    <RowDefinition Height="25" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Background="ForestGreen">
                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                        <Button
                                            x:Name="btn_previousDate"
                                            Margin="3,2"
                                            Padding="5,0"
                                            Content="Previous" />
                                        <DatePicker x:Name="dtp_timecheck_date" Padding="5,2" />
                                        <Button
                                            x:Name="btn_nextDate"
                                            Margin="3,2"
                                            Padding="5,0"
                                            Content="Next" />
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                        <Button
                                            x:Name="btn_timecheck_export"
                                            Margin="3,2"
                                            Padding="5,0"
                                            Content="Export" />
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <DataGrid
                                        x:Name="dg_timeChecks"
                                        AutoGenerateColumns="True"
                                        CanUserAddRows="False"
                                        CanUserDeleteRows="False"
                                        ItemsSource="{Binding TimeChecks, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                                <Grid Grid.Row="2" Background="ForestGreen" />
                            </Grid>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>

        </Grid>

    </Grid>
</Page>
