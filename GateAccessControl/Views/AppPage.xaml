                                                            </Border>
                                                        </Grid>
                                                    </Grid>
                                                </Grid>
                                            </Border>

                                            <Grid Grid.Row="1">
                                                <RichTextBox />
                                            </Grid>
                                        </Grid>
                                    </ScrollViewer>
                                </GroupBox>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="200" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25" />
                                    <RowDefinition />
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="25" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Background="Cornsilk">
                                    <StackPanel
                                        HorizontalAlignment="Left"
                                        Background="DarkSlateBlue"
                                        Orientation="Horizontal">
                                        <md:CommandComboBox
                                            x:Name="cb_device_class"
                                            Width="65"
                                            Margin="3,2"
                                            Padding="5,0"
                                            VerticalContentAlignment="Center"
                                            Command="{Binding SearchClassDeviceProfilesCommand}"
                                            CommandParameter="{Binding ElementName=dg_device_profiles, UpdateSourceTrigger=PropertyChanged, Path=Items}"
                                            DisplayMemberPath="CLASS_NAME"
                                            ItemsSource="{Binding Classes, UpdateSourceTrigger=PropertyChanged}"
                                            SelectedIndex="0"
                                            Text="{Binding Search_deviceProfiles_class, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" />
