                                        <Button
                                            x:Name="btn_device_remove"
                                            Margin="3,2"
                                            Padding="5,0"
                                            Command="{Binding RemoveDeviceCommand}"
                                            CommandParameter="{Binding ElementName=dg_devices, Path=SelectedItem, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                            Content="Remove" />
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="1">
