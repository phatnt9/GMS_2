<Window
    x:Class="GateAccessControl.Views.AddDeviceWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GateAccessControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add Device"
    Width="370"
    Height="150"
    local:DialogCloser.DialogResult="{Binding DialogResult}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock
                Margin="5,0"
                Padding="5,2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding AddDeviceStatus}" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <TextBlock
                            Margin="5,0"
                            Padding="5,2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Text="Gate Name: " />
                    </Grid>
                    <Grid Grid.Row="1">
                        <TextBlock
                            Margin="5,0"
                            Padding="5,2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Text="Gate IP: " />
                    </Grid>
                    <Grid Grid.Row="2">
                        <TextBlock
                            Margin="5,0"
                            Padding="5,2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Text="Note: " />
                    </Grid>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <TextBox
                            x:Name="tb_gateName"
                            Margin="5,2"
                            Text="{Binding Path=AddDevice.deviceName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            TextAlignment="Center" />
                    </Grid>
                    <Grid Grid.Row="1">
                        <TextBox
                            x:Name="tb_gateIp"
                            Margin="5,2"
                            Text="{Binding Path=AddDevice.deviceIp, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            TextAlignment="Center" />
                    </Grid>
                    <Grid Grid.Row="2">
                        <TextBox
                            x:Name="tb_gateNote"
                            Margin="5,2"
                            Text="{Binding Path=AddDevice.deviceNote, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            TextAlignment="Center" />
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal">
                <Button
                    x:Name="btn_class_save"
                    Margin="3"
                    Padding="5,0"
                    BorderThickness="0"
                    Command="{Binding AddDeviceCommand}"
                    Content="Add">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="True">
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontWeight" Value="DemiBold" />
                                    <Setter Property="Background" Value="#222E50" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Visibility" Value="Visible" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button
                    Margin="3"
                    Padding="5,0"
                    BorderThickness="0"
                    Command="{Binding CloseAddDeviceCommand}"
                    Content="Close">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="True">
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontWeight" Value="DemiBold" />
                                    <Setter Property="Background" Value="#D83636" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Visibility" Value="Visible" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>