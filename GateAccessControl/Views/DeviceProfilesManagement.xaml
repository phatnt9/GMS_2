<Window
    x:Class="GateAccessControl.Views.DeviceProfilesManagement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GateAccessControl.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DeviceProfilesManagement"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition />
                    <RowDefinition Height="25" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <StackPanel
                        HorizontalAlignment="Right"
                        Background="Aqua"
                        Orientation="Horizontal">
                        <Button
                            x:Name="btn_profiles_Active"
                            Margin="3,2"
                            Padding="5,0"
                            VerticalContentAlignment="Center"
                            Content="Active" />
                        <Button
                            x:Name="btn_profiles_Deactive"
                            Margin="3,2"
                            Padding="5,0"
                            Content="Deactive" />
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1">
                    <DataGrid
                        Name="dg_profiles"
                        AutoGenerateColumns="True"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        ItemsSource="{Binding Path=Profiles, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />
                </Grid>
                <Grid Grid.Row="2">
                    <StackPanel
                        HorizontalAlignment="Right"
                        Background="Aqua"
                        Orientation="Horizontal">
                        <Button
                            x:Name="btn_profiles_select"
                            Margin="3,2"
                            Padding="5,0"
                            VerticalContentAlignment="Center"
                            Content="Select" />
                    </StackPanel>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition />
                    <RowDefinition Height="25" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <StackPanel
                        HorizontalAlignment="Right"
                        Background="Aqua"
                        Orientation="Horizontal">
                        <Button
                            x:Name="btn_deviceProfiles_Active"
                            Margin="3,2"
                            Padding="5,0"
                            VerticalContentAlignment="Center"
                            Content="Active" />
                        <Button
                            x:Name="btn_deviceProfiles_Deactive"
                            Margin="3,2"
                            Padding="5,0"
                            Content="Deactive" />
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1">
                    <DataGrid
                        Name="dg_deviceProfiles"
                        AutoGenerateColumns="True"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        ItemsSource="{Binding Path=DeviceProfiles, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />
                </Grid>
                <Grid Grid.Row="2">
                    <StackPanel
                        HorizontalAlignment="Right"
                        Background="Aqua"
                        Orientation="Horizontal">
                        <Button
                            x:Name="btn_deviceProfiles_remove"
                            Margin="3,2"
                            Padding="5,0"
                            VerticalContentAlignment="Center"
                            Content="Remove" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" />
    </Grid>
</Window>
